<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="a00891437.set3s.comp3975.bankingapp.Home"
    android:background="#0081ce"
    android:focusableInTouchMode="true">




<ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/send"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#32A3E6"
            android:layout_alignTop="@+id/imageButton2"
            android:layout_toRightOf="@+id/imageButton2"
            android:layout_toEndOf="@+id/imageButton2"
    android:onClick="onClickSendMoney" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton2"
            android:src="@drawable/paybills"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#0081ce"
            android:layout_alignTop="@+id/imageButton3"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="onClickPayBills" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:src="@drawable/arrowright"
            android:layout_row="1"
            android:layout_column="3"
            android:background="#ffffff"
            android:layout_below="@+id/button"
            android:layout_toLeftOf="@+id/imageButton2"
            android:layout_toStartOf="@+id/imageButton2"
            android:onClick="onClickTransfer" />

    <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingRight="70dp"
            android:gravity="right|center_vertical"
            android:clickable="false"
            android:background="@drawable/menu1"
            style="?android:attr/borderlessButtonStyle"
            android:paddingTop="3dp"
            android:layout_marginBottom="10dp"
            android:onClick="onClickHomeCards"
        android:textSize="20dp"
        android:paddingLeft="50dp"
        android:nestedScrollingEnabled="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:src="@drawable/ad"
        android:background="#0081ce"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Accounts"
        android:id="@+id/button2"
        android:background="@drawable/button1"
        android:layout_below="@+id/imageButton3"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton"
        android:textAllCaps="false"
        android:paddingRight="180dp"
        android:textSize="18dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="onClickMyAccounts"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Credit Cards"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:background="@drawable/button1"
        android:textAllCaps="false"
        android:paddingRight="160dp"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:onClick="onClickMyCreditCards" />


</RelativeLayout>
